@model IEnumerable<ExcellentTaste.Models.ConsumptieItem>

@{
    ViewBag.Title = "Index";
}

<h2>Overzicht producten</h2>

<p>
    @Html.ActionLink("Toevoegen", "Create", "ConsumptieItem", null, new { @class = "btn btn-primary btn-large" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.consumptieItemNaam)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.prijs)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ConsumptieGroep.consumptieCode)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.consumptieItemNaam)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.prijs)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ConsumptieGroep.consumptieCode)
        </td>
        <td>
            @Html.ActionLink("Wijzig", "Edit", new { id=item.consumptieItemCode }) |
            @Html.ActionLink("Details", "Details", new { id=item.consumptieItemCode }) |
            @Html.ActionLink("Verwijder", "Delete", new { id=item.consumptieItemCode })
        </td>
    </tr>
}

</table>
