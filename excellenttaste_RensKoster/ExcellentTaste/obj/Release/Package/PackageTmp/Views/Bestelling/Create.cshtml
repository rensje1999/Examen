@model ExcellentTaste.Models.Bestelling

@{
    ViewBag.Title = "Toevoegen";
}

<h2>Toevoegen</h2>
@if (TempData["error"] != null)
{
    <div class="label-warning">@TempData["error"]</div>
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Bestelling</h4>
        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.reserveringId, "Tafel", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @if (ViewBag.status == 1)
                {
                    <span>@Html.DropDownList("reserveringId", null, htmlAttributes: new { @class = "form-control", @disabled = "disabled" })</span>
                }
                else
                {
                    <span>@Html.DropDownList("reserveringId", null, htmlAttributes: new { @class = "form-control" })</span>
                }
                @Html.ValidationMessageFor(model => model.reserveringId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.consumptieItemCode, "Consumptie", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("consumptieItemCode", null, htmlAttributes: new { @class = "form-control" })

                @Html.ValidationMessageFor(model => model.consumptieItemCode, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.aantal, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.aantal, new { htmlAttributes = new { @class = "form-control", @type = "number", min = "1", Value = "1" } })
                @Html.ValidationMessageFor(model => model.aantal, "", new { @class = "text-danger" })
            </div>

        </div>
        <div class="form-group">
            <div class="col-md-12">
                <input type="submit" value="Toevoegen" class="btn btn-default" />
            </div>
        </div>
    </div>
}

