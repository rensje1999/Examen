@model IEnumerable<ExcellentTaste.Models.Consumptie>

<h1>
    <strong>
        EXCELLENT TASTE<br />
        MENUKAART
    </strong>
</h1>
<br />

@*Let op! De HTML moet nog worden opgemaakt in CSS. *@
<div class="row">
    <div class="col-sm-2 hidden-xs">
        <img src="~/Content/Images/MenuLogo.png" class="img-responsive" />
    </div>
    <div class="col-sm-10 col-xs-12">
        @foreach (var objConsumptie in Model)
        {
            if (objConsumptie.consumptieCode == "hog" || objConsumptie.consumptieCode == "nag"
                || objConsumptie.consumptieCode == "vog")
            {
                <h3><strong>@Html.DisplayFor(modelItem => objConsumptie.consumptieNaam)</strong></h3>

                var cg = objConsumptie.ConsumptieGroep;
                foreach (var objConsumptieGroep in cg)
                {
                    <h4>@Html.DisplayFor(modelx => objConsumptieGroep.consumptieGroepNaam)</h4>

                    var ci = objConsumptieGroep.ConsumptieItem;

                    <table class="table" style="width:50%">
                        @foreach (var objConsumptieItem in ci)
                        {
                            <tr>
                                <td class="col-5" style="width:50%">
                                    @Html.DisplayFor(modely => objConsumptieItem.consumptieItemNaam)
                                </td>
                                <td class="col-5" style="width:50%">
                                    @Html.DisplayFor(modely => objConsumptieItem.prijs)
                                </td>
                            </tr>
                        }
                    </table>
                    <br />
                }
            }
        }

    </div>
</div>